{
  "listen_port": 8080,
  "bind_address": "0.0.0.0",
  "backlog": 128,
  "algorithm": "weighted_round_robin",

  "backends": [
    {
      "host": "127.0.0.1",
      "port": 9001,
      "weight": 3,
      "max_connections": 100
    },
    {
      "host": "127.0.0.1",
      "port": 9002,
      "weight": 2,
      "max_connections": 100
    },
    {
      "host": "127.0.0.1",
      "port": 9003,
      "weight": 1,
      "max_connections": 100
    }
  ],

  "pool": {
    "max_size": 64,
    "ttl": 60
  },

  "rate_limit": {
    "per_ip": 100.0,
    "global": 10000.0,
    "burst": 20
  },

  "timeouts": {
    "connect": 5000,
    "read": 30000,
    "write": 30000,
    "idle": 60000
  },

  "drain_timeout": 30
}
